pkgname=dwm-fb
pkgver=r3.b85ebaa
pkgrel=1
pkgdesc="A dynamic window manager for X - Fryed Version"
url="https://github.com/fryedbiscuit/dwm"
arch=('i686' 'x86_64' 'arm' 'armv7h' 'armv6h' 'aarch64')
license=('MIT')
# options=(zipman)
depends=('libx11' 'libxinerama' 'libxft' 'freetype' 'noto-fonts-emoji')
makedepends=('git' 'make')
provides=('dwm')
conflicts=('dwm')
source=(git+https://github.com/fryedbiscuit/dwm.git#branch=main)
sha256sums=('SKIP')

pkgver() {
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd dwm
	make
}

package() {
	cd dwm
	make PREFIX="${PREFIX:-/usr}" DESTDIR="$pkgdir" install
}
